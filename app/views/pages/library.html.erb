<div class="container">   
  <div class="cta">
     <h2>Immerse yourself with new music</h2>
     <p>Get to know favourite songs of folks around</p>
  </div>

  <div class="row justify-content-center">
    <%= form_for :playlist, as: :get, url: export_path, method: :get, html: { class: "new_post", id: "new_post" } do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <%= f.submit class: 'btn btn-gradient' %>
    <% end %>
  </div>

  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://images.unsplash.com/photo-1499364615650-ec38552f4f34?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1566&q=80" alt="First slide">
        <div class="carousel-caption d-block d-md-block">
          <h5>Maroon 5</h5>
          <p>Sugar</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://images.unsplash.com/photo-1514525253161-7a46d19cd819?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1567&q=80" alt="Second slide">
        <div class="carousel-caption d-block d-md-block">
          <h5>Black Keys</h5>
          <p>Lonely Boy</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://images.unsplash.com/photo-1507676184212-d03ab07a01bf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="Third slide">
        <div class="carousel-caption d-block d-md-block">
          <h5>Alabama Shakes</h5>
          <p>This feeling</p>
        </div>
      </div>
    </div>
  </div>

  <% @tracks.each do |track| %>
    <%= render "shared/track_card", locals: { track: track } %>
  <% end %>
</div>


